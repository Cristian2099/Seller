<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="103dp"
        android:layout_height="44dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:text="INICIO"
        android:textColor="@color/md_teal_700"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/proveedor"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:id = "@+id/txtUsuario"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:hint="Usuario"
        android:backgroundTint="@color/md_teal_500"

        />

    <EditText
        android:id = "@+id/txtContrasena"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:hint="Contraseña"
        android:backgroundTint="@color/md_teal_500"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/btn_iniciarSession"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/md_teal_50"
        android:background="@color/md_teal_500"
        />

    <Button
        android:id="@+id/btn_crearUsuarios"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Crear usuarios"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/md_teal_50"
        android:background="@color/md_teal_500"
        android:onClick="crearUsuarios"
        />




</LinearLayout>